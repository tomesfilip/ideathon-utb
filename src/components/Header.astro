---
import { NAV_LINKS } from '../lib/constants';
import NavLink from './navbar/NavLink.astro';
import Socials from './Socials.astro';
import ideathonLogoImg from '../assets/ideathonLogoHome.png';
import Burger from './navbar/Burger.astro';
---

<header class="w-full flex flex-col items-center">
  <nav
    class="w-full max-w-[1600px] px-4 flex justify-between relative items-center py-2"
  >
    <a href="./" class="flex-shrink-0">
      <img
        src={ideathonLogoImg.src}
        alt="Ideathon logo"
        width={60}
        height={60}
      />
    </a>
    <ul
      id="nav-item-list"
      class="transition-transform duration-300 flex flex-col lg:flex-row items-center absolute lg:static space-between w-full gap-x-8 lg:gap-x-12 lg:max-w-max top-[72px] lg:translate-x-0 gap-y-8 bg-white lg:bg-transparent py-8 lg:py-0 z-[2]"
    >
      {NAV_LINKS.map((navLink) => <NavLink {...navLink} />)}
    </ul>
    <div
      class="max-w-max absolute lg:static left-1/2 -translate-x-1/2 lg:translate-x-0"
    >
      <Socials />
    </div>
    <Burger />
  </nav>
</header>

<style>
  @media only screen and (max-width: 1024px) {
    #nav-item-list {
      transform: translateX(100%);
    }

    .isNavOpen#nav-item-list {
      transform: translateX(0);
    }
  }
</style>
