---
interface Props {
  linkTo: string;
  isBlank?: boolean;
}
const { linkTo = './', isBlank } = Astro.props;
---

<a
  class="cursor-pointer text-white underline text-sm"
  href={linkTo}
  target={isBlank ? '_blank' : '_self'}
  rel={isBlank ? 'noopener noreferrer' : ''}
>
  <slot name="content" />
</a>
